{
    "variables": {
        "username": "icfp17",
        "password": "icfp17",
        "hostname": "icfp17",
        "homepage": "https://github.com/mainland/kyllini/tree/icfp17"
    },

    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo {{user `password`}} | sudo -S sh '{{.Path}}'",
            "script": "scripts/ubuntu/upgrade.sh"
        },
        {
            "type": "shell",
            "execute_command": "echo {{user `password`}} | sudo -S sh '{{.Path}}'",
            "pause_before": "10s",
            "scripts": [
                "scripts/ubuntu/base.sh",
                "scripts/ubuntu/desktop.sh",
                "scripts/ubuntu/misc.sh"
            ]
        },
        {
            "type": "shell",
            "execute_command": "echo {{user `password`}} | {{.Vars}} sudo -E -S sh '{{.Path}}'",
            "environment_vars": [ "SSH_USER={{user `username`}}" ],
            "only": ["vmware-iso"],
            "script": "scripts/ubuntu/vmware.sh"
        },
        {
            "type": "file",
            "source": "files/{{user `username`}}/favorites.override",
            "destination": "99_launcher.favorites.gschema.override"
        },
        {
            "type": "file",
            "source": "files/{{user `username`}}/emacs-init.el",
            "destination": "/tmp/emacs-init.el"
        },
        {
            "type": "file",
            "source": "files/{{user `username`}}/dot-emacs",
            "destination": ".emacs"
        },
        {
            "type": "file",
            "source": "files/{{user `username`}}/dot-vimrc",
            "destination": ".vimrc"
        },
        {
            "type": "shell",
            "execute_command": "echo {{user `password`}} | {{.Vars}} sudo -E -S sh '{{.Path}}'",
            "environment_vars": [
                "SSH_USER={{user `username`}}",
                "HOMEPAGE={{user `homepage`}}"
            ],
            "scripts": [
                "scripts/ubuntu/{{user `username`}}.sh",
                "scripts/ubuntu/editors.sh"
            ]
        },
        {
            "type": "shell",
            "execute_command": "echo {{user `password`}} | {{.Vars}} sudo -E -S sh '{{.Path}}'",
            "environment_vars": [ "SSH_USER={{user `username`}}" ],
            "script": "scripts/ubuntu/cleanup.sh"
        },
        {
            "type": "shell",
            "execute_command": "echo {{user `password`}} | sudo -E -S sh '{{.Path}}'",
            "script": "scripts/ubuntu/zerodisk.sh"
        }
    ],
    "builders": [
        {
            "type": "vmware-iso",
            "boot_command": [
                "<enter><wait>",
                "<f6><esc>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs>",
                "/install/vmlinuz",
                " initrd=/install/initrd.gz",
                " noapic",
                " auto=true",
                " netcfg/get_hostname={{user `hostname`}}",
                " passwd/user-fullname={{user `username`}}",
                " passwd/username={{user `username`}}",
                " passwd/user-password={{user `password`}}",
                " passwd/user-password-again={{user `password`}}",
                " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
                " <enter>"
            ],
            "boot_wait": "10s",
            "disk_size": 40960,
            "guest_os_type": "ubuntu-64",
            "http_directory": "http",
            "iso_checksum": "737ae7041212c628de5751d15c3016058b0e833fdc32e7420209b76ca3d0a535",
            "iso_checksum_type": "sha256",
            "iso_url": "http://releases.ubuntu.com/16.04/ubuntu-16.04.2-server-amd64.iso",
            "output_directory": "output/{{user `username`}}",
            "ssh_username": "{{user `username`}}",
            "ssh_password": "{{user `password`}}",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'shutdown -P now' > /tmp/shutdown.sh; echo {{user `password`}}|sudo -S sh '/tmp/shutdown.sh'",
            "vm_name": "{{user `username`}}",
            "vmdk_name": "{{user `username`}}",
            "vmx_data": {
                "memsize": "2048",
                "numvcpus": "1",
                "cpuid.coresPerSocket": "1"
            },
            "vmx_data_post": {
                "ethernet0.virtualDev": "vmxnet3"
            }
        }
    ]
}
